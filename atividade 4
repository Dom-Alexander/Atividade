// Seção de Comandos, procedimento, funções, operadores, etc...
escreval ("Qual seu nome?")
leia (no)
escreval ("Qual seu genero?")
leia (S)
escreval ("Qual o valor de sua compra?")
leia (val)
escreval("sua compra foi de", val ,"R$ e por ser do genero", S)
se S = "mulher" então
escreval (" seu descontos foi de 13% e o valor final é de ")
escreval (val -(0.13*val),"R$")
senão
escreval ("seu desconto foi de 5% e o valor final é de")
